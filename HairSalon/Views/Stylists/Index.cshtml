@{
  Layout = "_Layout";
}

@using Salon.Models;
@model List<Salon.Models.Stylists>;

<h1>Stylists</h1>

@if (@Model.Count == 0)
{
  <h3>No Stylists have been added yet!</h3>
} 

@foreach (Stylists stylists in Model)
{
  <li>@Html.ActionLink($"{stylists.StylistName}", "Details", new { id = stylists.StylistId })</li>
}

<p>@Html.ActionLink("Add new stylist", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>