@{
  Layout = "_Layout";
}

@model Salon.Models.Client;

<h2>Edit</h2>

<h4>Edit this Client: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.ClientId)

  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name)

  @Html.Label("Select Stylist")
  @Html.DropDownList("StylistId")

  <input type="submit" value="Save" class = "btn btn-outline-success" />
}<br>
<p>@Html.ActionLink("Back to Clients", "Index", new {id = 0}, new {@class = "btn btn-outline-success" })</p>