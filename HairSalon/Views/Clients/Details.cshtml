  {
    <li>@join.Stylists.StylistName</li>
    @using (Html.BeginForm("DeleteStylist", "Clients"))
    {
      @Html.Hidden("joinId", @join.StylistClientId)
      <input type="submit" value="Delete"/>
    }
  }
