@{
  Layout = "_Layout";
}

@using Salon.Models; 

<h1>Salon Clients</h1>

@if (@Model.Count == 0)
{
  <h3>No clients have been added yet!</h3>
} 

<ul>
  @foreach(Clients clients in Model)
  {
    <li>@Html.ActionLink($"{clients.Name}", "Details", new { id = clients.ClientId })</li>
  }
</ul>

<p>@Html.ActionLink("Add New Client", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>